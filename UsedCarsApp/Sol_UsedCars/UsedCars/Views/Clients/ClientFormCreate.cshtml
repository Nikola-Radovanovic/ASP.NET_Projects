@model UsedCars.Models.CreatedModels.Client
@{
    ViewBag.Title = "ClientFormCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Client</h2>
<hr />
<div class="row">
    <div class="col-lg-8">
        @using (Html.BeginForm("CreateClient", "Clients"))
        {
            <div class="form-group">
                @Html.LabelFor(n => n.Name)
                @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.LastName)
                @Html.TextBoxFor(n => n.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.LastName)
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.Address)
                @Html.TextBoxFor(n => n.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Address)
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.PostalCode)
                @Html.TextBoxFor(n => n.PostalCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.PostalCode)
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.City)
                @Html.TextBoxFor(n => n.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.City)
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.Country)
                @Html.TextBoxFor(n => n.Country, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Country)
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.Phone)
                @Html.TextBoxFor(n => n.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Phone)
            </div>
            @Html.HiddenFor(n => n.Id)
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Add Client">
            </div>
        }
    </div>
    <div class="col-lg-4"></div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}